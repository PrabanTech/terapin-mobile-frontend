@code {
    private string activeTab = "home";

    void SetActive(string tab)
    {
        activeTab = tab;
    }

    string GetIconClass(string tab) => activeTab == tab ? "nav-icon active" : "nav-icon inactive";
}

<div class="bottom-nav">
    <button class="nav-button" @onclick='() => SetActive("home")'>
        <img src="images/home.svg" class="@GetIconClass("home")" alt="Home" />
    </button>
    <button class="nav-button" @onclick='() => SetActive("report")'>
        <img src="images/report.svg" class="@GetIconClass("report")" alt="Report" />
    </button>
    <button class="nav-button" @onclick='() => SetActive("profile")'>
        <img src="images/profile.svg" class="@GetIconClass("profile")" alt="Profile" />
    </button>
</div>