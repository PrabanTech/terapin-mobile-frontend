@inject NavigationManager Navigation

@code {
    string GetIconClass(string tab)
    {
        var current = Navigation.ToBaseRelativePath(Navigation.Uri).ToLower();
        return current == tab ? "nav-icon active" : "nav-icon inactive";
    }
}

<div class="bottom-nav">
    <button class="nav-button" @onclick='() => Navigation.NavigateTo("")'>
        <img src="images/home.svg" class="@GetIconClass("home")" alt="Home" />
    </button>
    <button class="nav-button" @onclick='() => Navigation.NavigateTo("report")'>
        <img src="images/report.svg" class="@GetIconClass("report")" alt="Report" />
    </button>
    <button class="nav-button" @onclick='() => Navigation.NavigateTo("profile")'>
        <img src="images/profile.svg" class="@GetIconClass("profile")" alt="Profile" />
    </button>
</div>